<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llTool"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/primaryColor">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:fontFamily="@font/opensansextrabold"
            android:textSize="16dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llTool"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">


            <EditText
                android:id="@+id/edtFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/background_round_corner_gray"
                android:fontFamily="@font/opensans_medium"
                android:hint="First name"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp"

                />

            <EditText
                android:id="@+id/edtLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/background_round_corner_gray"
                android:fontFamily="@font/opensans_medium"
                android:hint="Last name"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/editMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/background_round_corner_gray"
                android:fontFamily="@font/opensans_medium"
                android:hint="Mobile number"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/edtAddressOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/background_round_corner_gray"
                android:fontFamily="@font/opensans_medium"
                android:hint="Address 1"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtAddressTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/background_round_corner_gray"
                android:fontFamily="@font/opensans_medium"
                android:hint="Address 2"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/edtCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/background_round_corner_gray"
                android:fontFamily="@font/opensans_medium"
                android:hint="City"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/edtState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/background_round_corner_gray"
                android:fontFamily="@font/opensans_medium"
                android:hint="State"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/edtpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/background_round_corner_gray"
                android:fontFamily="@font/opensans_medium"
                android:hint="Pincode"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/edtCrditCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/background_round_corner_gray"
                android:fontFamily="@font/opensans_medium"
                android:hint="Credit Card"
                android:inputType="number"
                android:maxLength="16"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/edtCaptche"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/background_round_corner_gray"
                android:fontFamily="@font/opensans_medium"
                android:hint="Captche code"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/background_round_primary_color"
                android:enabled="true"
                android:fontFamily="@font/opensans_medium"
                android:text="Nex"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>